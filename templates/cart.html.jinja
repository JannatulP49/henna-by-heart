<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-[#F8EDE3] text-[#7a5b40]">
    {% include "components/navbar.html.jinja" %}

    <main class="max-w-7xl mx-auto px-6 py-12 grid grid-cols-1 lg:grid-cols-5 gap-8">

        <section class="lg:col-span-4 bg-white p-8 rounded-md shadow-sm">
            <h1 class="text-2xl font-semibold mb-8 border-b border-[#E6D5C3] pb-4">
                Shopping Cart
            </h1>
            {% if cart|length == 0 %}
            <div class="text-center py-16">
                <p class="text-lg mb-6">
                    Your cart is empty
                </p>

                <a href="/browse"
                    class="inline-block bg-[#7a5b40] hover:bg-[#6a4f38] text-[#F8EDE3] font-medium px-6 py-3 rounded-md">
                    Browse Products
                </a>
            </div>
            {% else %}

            {% for x in cart %}
            <div class="flex justify-between items-start py-6 border-b border-[#E6D5C3] last:border-b-0">


                <div class="flex gap-6">


                    <a href="/product/{{ x['ID'] }}">
                        <img src="{{ x['Image'] }}" alt="{{ x['Name'] }}"
                            class="w-32 h-32 object-contain rounded-xl bg-white p-2 shadow-sm">
                    </a>


                    <div class="flex flex-col justify-between">

                        <div>
                            <a href="/product/{{ x['ID'] }}" class="text-lg font-medium hover:text-[#7a5b40]/80">
                                {{ x["Name"] }}
                            </a>

                            <p class="text-m text-brown mt-1">
                                In stock
                            </p>
                        </div>


                        <div class="mt-4 space-y-3">

                    
                            <form method="post" action="/cart/{{ x['ProductID'] }}/update_qty"
                                class="flex items-center gap-2">
                                <label class="text-s text-brown">
                                    Qty
                                </label>
                                <input name="qty" type="number" value="{{ x['Quantity'] }}" min="1" class="w-16 px-2 py-1 text-sm border border-[#bf925c] rounded-md
                               focus:outline-none focus:ring-1 focus:ring-[#e6af6c]">
                                <button type="submit" class="text-xs px-3 py-1 rounded-full border border-[#bf925c]
                               text-[#694f3a] hover:bg-[#F8EDE3] transition">
                                    Update
                                </button>
                            </form>

                            <form method="post" action="/cart/{{ x['ProductID'] }}/delete">
                                <button type="submit" class="text-xs text-[#7a5b40] hover:underline">
                                    Remove
                                </button>
                            </form>

                        </div>
                    </div>
                </div>


                <div class="text-lg font-semibold text-[#694f3a] whitespace-nowrap mt-2">
                    ${{ x["Price"] * x["Quantity"] }}
                </div>

            </div>
            {% endfor %}

            {% endif %}
        </section>

        <aside class="bg-white p-6 rounded-md shadow-sm h-fit">
            <p class="text-lg">
                Subtotal ({{ cart|length }} items):
                <span class="font-semibold">$ {{ total }}</span>
            </p>

            <a href="/checkout">
                <button class="w-full mt-6 bg-[#7a5b40] hover:bg-[#6a4f38] text-[#F8EDE3] font-medium py-3 rounded-md">
                    Proceed to Checkout
                </button>
            </a>
        </aside>

    </main>
</body>

</html>