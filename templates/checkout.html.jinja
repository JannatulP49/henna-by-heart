<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Checkout</title>
</head>

<body class="bg-[#F8EDE3] text-[#7a5b40]">
    {% include "components/navbar.html.jinja" %}

    <main class="max-w-7xl mx-auto px-6 py-12 grid grid-cols-1 lg:grid-cols-5 gap-8">

        <!-- Cart Section -->
        <section class="lg:col-span-3 bg-white p-8 rounded-md shadow-sm">
            <h1 class="text-2xl font-semibold mb-8 border-b border-[#E6D5C3] pb-4">
                Shopping Cart
            </h1>

            {% if cart|length == 0 %}
            <div class="text-center py-16">
                <p class="text-lg mb-6">
                    Your cart is empty ðŸ›’
                </p>
                <a href="/browse"
                    class="inline-block bg-[#7a5b40] hover:bg-[#6a4f38] text-[#F8EDE3] font-medium px-6 py-3 rounded-md">
                    Browse Products
                </a>
            </div>
            {% else %}

            {% for x in cart %}
            <div class="flex items-center justify-between py-8 border-b border-[#E6D5C3] last:border-b-0">

                <div class="flex gap-8 items-center">
                    <a href="/product/{{ x['ID'] }}">
                        <img src="{{ x['Image'] }}" alt="{{ x['Name'] }}" class="w-44 h-44 object-contain" />
                    </a>

                    <div>
                        <a href="/product/{{ x['ID'] }}" class="text-xl font-medium hover:text-[#7a5b40]/80 block">
                            {{ x["Name"] }}
                        </a>

                        <p class="text-sm mt-2">In Stock</p>

                        <form method="post" action="/cart/{{ x['ProductID'] }}/update_qty" class="mt-2">
                            <label class="text-sm mr-2">Quantity:</label>
                            <input name="qty" type="number" value="{{ x['Quantity'] }}" min="1"
                                class="border border-gray-300 rounded-md px-2 py-1 w-20">
                            <button type="submit"
                                class="ml-2 bg-[#7a5b40] hover:bg-[#6a4f38] text-[#F8EDE3] px-2 py-1 rounded-md text-sm">
                                Update
                            </button>
                        </form>

                        <form method="post" action="/cart/{{ x['ProductID'] }}/delete" class="mt-2">
                            <button type="submit"
                                class="bg-[#7a5b40] hover:bg-[#6a4f38] text-white px-3 py-1 rounded-md text-sm">
                                Remove
                            </button>
                        </form>
                    </div>
                </div>

                <div class="text-xl font-semibold whitespace-nowrap">
                    $ {{ x["Price"] * x["Quantity"] }}
                </div>
            </div>
            {% endfor %}
            {% endif %}
        </section>


        <aside class="lg:col-span-2 bg-white p-8 rounded-md shadow-sm h-fit">
            <h2 class="text-2xl font-semibold mb-6">Checkout</h2>

            <form method="post" class="space-y-4">

                <div>
                    <label class="block mb-1 font-medium">Full Name</label>
                    <input type="text" name="name" required
                        class="w-full border border-gray-300 rounded-md px-3 py-2">
                </div>

                <div>
                    <label class="block mb-1 font-medium">Email</label>
                    <input type="email" name="email" required
                        class="w-full border border-gray-300 rounded-md px-3 py-2">
                </div>

                <div>
                    <label class="block mb-1 font-medium">Address</label>
                    <input type="text" name="address" required
                        class="w-full border border-gray-300 rounded-md px-3 py-2">
                </div>

                <div>
                    <label class="block mb-1 font-medium">City</label>
                    <input type="text" name="city" required
                        class="w-full border border-gray-300 rounded-md px-3 py-2">
                </div>

                <div>
                    <label class="block mb-1 font-medium">ZIP / Postal Code</label>
                    <input type="text" name="zip" required
                        class="w-full border border-gray-300 rounded-md px-3 py-2">
                </div>

                </div>

                <p class="text-lg mt-4">
                    Subtotal ({{ cart|length }} items):
                    <span class="font-semibold">$ {{ total }}</span>
                </p>

                <button type="submit"
                    class="w-full mt-6 bg-[#7a5b40] hover:bg-[#6a4f38] text-[#F8EDE3] font-medium py-3 rounded-md">
                    Place Order
                </button>

            </form>
        </aside>

    </main>
</body>

</html>
